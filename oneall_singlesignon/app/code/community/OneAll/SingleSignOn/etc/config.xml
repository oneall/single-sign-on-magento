<?xml version="1.0"?>
<config>
	<modules>
		<OneAll_SingleSignOn>
			<version>1.0.0</version>
		</OneAll_SingleSignOn>
	</modules>
	<frontend>
		<routers>
			<oneallsociallogin>
				<use>standard</use>
				<args>
					<module>OneAll_SingleSignOn</module>
					<frontName>social</frontName>
				</args>
			</oneallsociallogin>
		</routers>
		<layout>
			<updates>
				<oneall_singlesignon module="oneall_singlesignon">
					<file>oneall-singlesignon.xml</file>
				</oneall_singlesignon>
			</updates>
		</layout>
	</frontend>	
	<global>
		<blocks>
			<oneall_singlesignon>
				<class>OneAll_SingleSignOn_Block</class>
			</oneall_singlesignon>
		</blocks>
		<models>
			<oneall_singlesignon>
				<class>OneAll_SingleSignOn_Model</class>
				<resourceModel>oneall_singlesignon_mysql4</resourceModel>
			</oneall_singlesignon>
			<oneall_singlesignon_mysql4>
				<class>OneAll_SingleSignOn_Model_Mysql4</class>
				<entities>
					<entity>
						<table>oneall_singlesignon_entity</table>
					</entity>
				</entities>
			</oneall_singlesignon_mysql4>
		</models>
		<resources>
			<oneall_singlesignon_setup>
				<setup>
					<module>OneAll_SingleSignOn</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</oneall_singlesignon_setup>
			<oneall_singlesignon_write>
				<connection>
					<use>core_write</use>
				</connection>
			</oneall_singlesignon_write>
			<oneall_singlesignon_read>
				<connection>
					<use>core_read</use>
				</connection>
			</oneall_singlesignon_read>
		</resources>
		<helpers>
			<oneall_singlesignon>
				<class>OneAll_SingleSignOn_Helper</class>
			</oneall_singlesignon>
		</helpers>
	</global>
	<default>
		<oneall_singlesignon>
			<connection>
				<handler>curl</handler>
				<port>443</port>
			</connection>
			<settings>
				<textsignup>Sign up with a social network</textsignup>
				<textsignin>Sign in with a social network</textsignin>
			</settings>
			<services>
				<amazon>setno</amazon>
				<battlenet>setno</battlenet>
				<blogger>setno</blogger>
				<disqus>setno</disqus>
				<draugiem>setno</draugiem>
				<dribbble>setno</dribbble>
				<facebook>setyes</facebook>
				<foursquare>setno</foursquare>
				<githubcom>setno</githubcom>
				<google>setyes</google>
				<instagram>setno</instagram>
				<linkedin>setyes</linkedin>
				<livejournal>setno</livejournal>
				<mailru>setno</mailru>
				<odnoklassniki>setno</odnoklassniki>
				<openid>setno</openid>
				<paypal>setno</paypal>
				<pinterest>setno</pinterest>
				<pixelpin>setno</pixelpin>
				<reddit>setno</reddit>
				<skyrockcom>setno</skyrockcom>
				<stackexchange>setno</stackexchange>
				<steam>setno</steam>
				<twitch>setno</twitch>				
				<twitter>setyes</twitter>
				<vimeo>setno</vimeo>
				<vkontakte>setno</vkontakte>
				<windowslive>setno</windowslive>
				<wordpress>setno</wordpress>
				<xing>setno</xing>
				<yahoo>setno</yahoo>
				<youtube>setno</youtube>
			</services>			
		</oneall_singlesignon>
	</default>
</config> 