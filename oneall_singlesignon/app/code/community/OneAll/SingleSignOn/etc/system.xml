<?xml version="1.0" encoding="UTF-8"?>
<config>
	<tabs>
		<oneall translate="label">
			<label>OneAll</label>
			<sort_order>200</sort_order>
		</oneall>
	</tabs>
	<sections>	
		<oneall_singlesignon>
			<label>OneAll Single Sign-On</label>
			<tab>oneall</tab>
			<frontend_type>text</frontend_type>
			<sort_order>260</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<documentation translate="label">
					<label>Documentation</label>
					<comment><![CDATA[The online documentation for this extension is available <a href="http://docs.oneall.com/plugins/guide/social-login-magento/" target="_blank">here</a>.]]></comment>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
				</documentation>
				<connection translate="label">
					<label>API Connection Handler</label>
					<frontend_type>Radios</frontend_type>
					<frontend_model>oneall_singlesignon/adminhtml_system_config_fieldset_general</frontend_model>
					<sort_order>2</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<handler>
							<label>Connection Handler</label>
							<frontend_type>select</frontend_type>
							<source_model>oneall_singlesignon/apiconnectionhandler
							</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</handler>
						<port>
							<label>Connection Port</label>
							<frontend_type>select</frontend_type>
							<source_model>oneall_singlesignon/apiconnectionport</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</port>						
						<autodetect>						
							<frontend_type>Button</frontend_type>
							<comment>
								<model>oneall_singlesignon/apiautodetect</model>
							</comment>
							<source_model>oneall_singlesignon/apiautodetect</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</autodetect>
					</fields>
				</connection>
				<general translate="label">
					<label>API Settings</label>
					<comment><![CDATA[<strong>You can create and view your API Credentials in your <a href="https://app.oneall.com/signin/" target="_blank">OneAll account</a>.</strong>]]></comment>
					<frontend_type>text</frontend_type>
					<frontend_model>oneall_singlesignon/adminhtml_system_config_fieldset_general</frontend_model>
					<sort_order>3</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<subdomain>
							<label>API Subdomain</label>
							<frontend_type>text</frontend_type>
							<backend_model>oneall_singlesignon/subdomain</backend_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</subdomain>
						<key>
							<label>API Public Key</label>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</key>
						<secret>
							<label>API Private Key</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</secret>
						<verify>
							<label></label>
							<frontend_type>Button</frontend_type>
							<comment>
								<model>oneall_singlesignon/apiverify</model>
							</comment>
							<source_model>oneall_singlesignon/apiverify</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</verify>
					</fields>
				</general>
	
				<settings translate="label">
					<label>Settings</label>
					<frontend_type>text</frontend_type>
					<frontend_model>oneall_singlesignon/adminhtml_system_config_fieldset_general</frontend_model>
					<sort_order>5</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<textsignup>
							<label>Registration Title</label>
							<comment>Displayed when registering with a Social Network
							</comment>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</textsignup>
						<textsignin>
							<label>Login Title</label>
							<comment>Displayed when logging in with a Social Network
							</comment>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</textsignin>
					</fields>
				</settings>
			</groups>
		</oneall_singlesignon>
	</sections>
</config>